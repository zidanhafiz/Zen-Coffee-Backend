generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id        String    @id @default(uuid())
  username  String    @db.VarChar(100)
  fullName  String    @db.VarChar(255)
  email     String    @db.VarChar(255)
  image     String    @db.Text
  role      Role      @default(USER)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  address   Address[]
  banks     Bank[]
  wishlist  Wishlist?
  cart      Cart?
}

model Product {
  id           String            @id @default(uuid())
  name         String            @db.VarChar(255)
  description  String            @db.Text
  stock        Int               @db.Integer
  price        Int               @db.Integer
  createdAt    DateTime          @default(now())
  updatedAt    DateTime          @updatedAt
  variants     ProductVariants[]
  images       ProductImage[]
  comments     ProductComment[]
  userWishlist WishlistItem[]
  userCart     CartItem[]
  banner       BannerItem[]
}

model ProductVariants {
  product   Product @relation(fields: [productId], references: [id])
  productId String
  variat    Variant @relation(fields: [variantId], references: [id])
  variantId String

  @@id([productId, variantId])
}

model Variant {
  id       String            @id @default(uuid())
  name     String
  products ProductVariants[]
}

model ProductImage {
  id        String  @id @default(uuid())
  url       String  @db.Text
  productId String
  product   Product @relation(fields: [productId], references: [id])
}

model ProductComment {
  id        String         @id @default(uuid())
  comment   String         @db.Text
  rate      Int            @db.Integer
  productId String
  product   Product        @relation(fields: [productId], references: [id])
  images    CommentImage[]
}

model CommentImage {
  id        String         @id @default(uuid())
  url       String         @db.Text
  commentId String
  comment   ProductComment @relation(fields: [commentId], references: [id])
}

model Address {
  id          String @id @default(uuid())
  name        String @db.VarChar(255)
  province    String @db.VarChar(255)
  city        String @db.VarChar(255)
  subdistrict String @db.VarChar(255)
  postalCode  Int    @db.Integer
  detail      String @db.Text
  phone       Int    @db.Integer
  userId      String
  user        User   @relation(fields: [userId], references: [id])
}

model Bank {
  id      String @id @default(uuid())
  name    String @db.VarChar(255)
  bank    String @db.VarChar(100)
  account Int    @db.Integer
  userId  String
  user    User   @relation(fields: [userId], references: [id])
}

model Wishlist {
  id        String         @id @default(uuid())
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
  userId    String         @unique
  user      User           @relation(fields: [userId], references: [id])
  items     WishlistItem[]
}

model WishlistItem {
  wishlistId String
  productId  String
  wishlist   Wishlist @relation(fields: [wishlistId], references: [id])
  product    Product  @relation(fields: [productId], references: [id])

  @@id([wishlistId, productId])
}

model Cart {
  id         String     @id @default(uuid())
  totalPrice Int        @default(0) @db.Integer
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  userId     String     @unique
  user       User       @relation(fields: [userId], references: [id])
  items      CartItem[]
}

model CartItem {
  cartId    String
  productId String
  quantity  Int     @default(1) @db.Integer
  cart      Cart    @relation(fields: [cartId], references: [id])
  product   Product @relation(fields: [productId], references: [id])

  @@id([cartId, productId])
}

model Banner {
  id          String       @id @default(uuid())
  name        String       @db.VarChar(100)
  description String       @db.Text
  image       String       @db.Text
  products    BannerItem[]
}

model BannerItem {
  bannerId  String
  productId String
  banner    Banner  @relation(fields: [bannerId], references: [id])
  product   Product @relation(fields: [productId], references: [id])

  @@id([bannerId, productId])
}
